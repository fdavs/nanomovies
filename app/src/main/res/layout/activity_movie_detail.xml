<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="no.skavdahl.udacity.popularmovies.MovieDetailActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/posterImageView"
        android:minHeight="100dp"
        android:contentDescription="@string/movie_poster"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Movie title"
        android:id="@+id/movieTitleTextView"
        android:layout_below="@+id/posterImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synopsis"
        android:id="@+id/synopsisTextView"
        android:layout_below="@+id/movieTitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Rating:"
        android:id="@+id/userRatingLabel"
        android:layout_below="@+id/synopsisTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.5"
        android:id="@+id/userRatingTextView"
        android:layout_alignTop="@+id/userRatingLabel"
        android:layout_toRightOf="@+id/userRatingLabel"
        android:layout_toEndOf="@+id/userRatingLabel"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Date:"
        android:id="@+id/releaseDateLabel"
        android:layout_below="@+id/userRatingLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01.01.2015"
        android:id="@+id/releaseDateTextView"
        android:layout_below="@+id/userRatingTextView"
        android:layout_alignLeft="@+id/userRatingTextView"
        android:layout_alignStart="@+id/userRatingTextView"/>
</RelativeLayout>
